// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Partner {
  id           Int    @default(autoincrement()) @id
  username     String
  location     String
  phone        Int
  email        String 
  leads        Lead[]
}

model Lead {
  id           Int     @default(autoincrement()) @id
  firstName    String
  lastName     String
  email        String
  phone        Int
  refererId    Int
  referer      Partner @relation(fields:[refererId], references:[id])
}